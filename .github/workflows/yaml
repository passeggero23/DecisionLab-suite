name: Build-DecisionLab-Final
on: [push, workflow_dispatch]

jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - name: ğŸ“¥ Checkout totale
        uses: actions/checkout@v4
        with:
          submodules: recursive # Forza GitHub a entrare nelle cartelle con i puntini

      - name: ğŸš€ Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          channel: 'stable'

      - name: ğŸ› ï¸ Trova e Costruisci
        run: |
          # Cerchiamo dove si trova il file pubspec e spostiamoci lÃ¬
          PUBSPEC_PATH=$(find . -name "pubspec.yaml" -not -path "*/.*" | head -n 1)
          PROJECT_DIR=$(dirname "$PUBSPEC_PATH")
          cd "$PROJECT_DIR"
          
          echo "Progetto trovato in: $PROJECT_DIR"
          
          flutter pub get
          flutter create . --project-name umancapital --platforms android --overwrite
          flutter build appbundle --release --no-tree-shake-icons

      - name: ğŸ“¤ Consegna AAB
        uses: actions/upload-artifact@v4
        with:
          name: UmanCapital-Package
          path: "**/build/app/outputs/bundle/release/*.aab"
